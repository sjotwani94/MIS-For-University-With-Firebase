<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:id="@+id/faculty_container"
    android:background="@drawable/button_selector4">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="370dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="Name:"
            android:fontFamily="sans-serif-condensed"
            />

        <TextView
            android:id="@+id/faculty_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Mr./Mrs. Anonymous"
            android:textColor="#A3000000"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-condensed"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="370dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="E-Mail:"
            android:fontFamily="sans-serif-condensed"
            />

        <TextView
            android:id="@+id/email_faculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="something@nirmauni.ac.in"
            android:textColor="#A3000000"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-condensed"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="370dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="Dept. &amp; Desg.:"
            android:fontFamily="sans-serif-condensed"
            />

        <TextView
            android:id="@+id/dept_desg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="None"
            android:textColor="#A3000000"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-condensed"
            />

    </LinearLayout>

</LinearLayout>