<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/result_container">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/notice_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title For Notice"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/notice_image"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                app:srcCompat="@drawable/media"
                android:scaleType="centerCrop"
                android:contentDescription="Registrations for Faculties and Students"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/notice_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posted By (Sender's Name)"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    />
                <TextView
                    android:id="@+id/notice_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:minLines="6"
                    android:text="Enter A Brief Notice here having number of characters from 100 to 1000 words"
                    android:textSize="14dp"
                    />

            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/share_whatsapp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Share On WhatsApp"
                    android:background="@drawable/cardview_button"
                    android:textColor="#E1000000"
                    android:textSize="18dp"
                    android:textAlignment="viewStart"
                    android:drawableLeft="@drawable/ic_whatsapp"
                    android:paddingLeft="80dp"
                    style="?attr/borderlessButtonStyle" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>